# Basic Settings
APP_NAME=MCP_Gateway
HOST=0.0.0.0
PORT=10000
DATABASE_URL=sqlite:///./mcp.db
LOG_LEVEL=INFO
LOG_FORMAT=json

# Authentication
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=changeme
AUTH_REQUIRED=true
AUTH_ENCRYPTION_SECRET=change-this-in-production

# Security
SKIP_SSL_VERIFY=false
ALLOWED_ORIGINS='["https://${RENDER_EXTERNAL_HOSTNAME}"]'
CORS_ENABLED=true

# Transport
TRANSPORT_TYPE=all
WEBSOCKET_PING_INTERVAL=30
SSE_RETRY_TIMEOUT=5000

# Federation
FEDERATION_ENABLED=true
FEDERATION_DISCOVERY=false
FEDERATION_TIMEOUT=30
FEDERATION_SYNC_INTERVAL=300

# Resources
RESOURCE_CACHE_SIZE=1000
RESOURCE_CACHE_TTL=3600
MAX_RESOURCE_SIZE=10485760

# Tools
TOOL_TIMEOUT=60
MAX_TOOL_RETRIES=3
TOOL_RATE_LIMIT=100
TOOL_CONCURRENT_LIMIT=10

# Database
DB_POOL_SIZE=200
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Gunicorn Settings
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

# Development
DEV_MODE=false